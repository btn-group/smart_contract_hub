.container.mt-5.polkadotjs#smart-contracts-new
  .row
    .col-md-9.mx-auto.mb-5
      .card
        .card-body
          %h1 New smart contract
          %form{ name: 'newForm' }
            .mb-3
              %label.form-label{ for: 'smart-contract-address-input' } Smart contract address
              %input.form-control#smart-contract-address-input{ name: 'smartContractAddress', required: true }
            .mb-3
              %label.form-label AZERO.ID
              %select.form-select#test{ required: true, name: 'azeroId' }
            / .mb-3
            /   %button.btn.btn-primary.btn-sm{ type: 'button' } Upload metadata.json
            /   %input.d-none{ name: 'url' }
            = render 'button_loading', button_classes: 'btn btn-primary', button_type: 'submit', ready_label: 'Create'
