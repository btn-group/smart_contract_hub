!!!
%html.h-100.js{ lang: 'eng' }
  %head
    %title Smart Contract Metadata Hub
    %meta{ charset: 'utf-8' }
    %link{ href: 'https://res.cloudinary.com/hv5cxagki/image/upload/c_scale,dpr_2,f_auto,h_15,q_auto/v1/logos/btn_purple_background_uu2ere', rel: 'shortcut icon' }
    %meta{ name: 'description', content: 'Smart contract metadata hub for Aleph ZERO.' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1, shrink-to-fit=no' }
    %meta{ property: 'og:image', content: 'https://res.cloudinary.com/hv5cxagki/image/upload/c_scale,h_80/v1621228725/logos/btn_purple_background_uu2ere.png'
     }
    %meta{ property: 'og:site_name', content: 'Smart Contract Metadata Hub' }
    = csrf_meta_tags
    = csp_meta_tag

    -# === THEME STYLESHEETS ===
    = stylesheet_link_tag 'application'
    :javascript
      global = globalThis
    = javascript_include_tag 'application', defer: true

    -# === CLOUDINARY WIDGET ===
    %script{ src: 'https://widget.cloudinary.com/v2.0/global/all.js', type: 'text/javascript' }
  %body
    %nav.navbar.bg-body-tertiary
      .container
        = link_to 'ABI Hub', root_path, class: 'navbar-brand'
        .d-block
          = link_to new_metadatum_path, class: 'btn btn-primary' do
            New
          = link_to '#', class: 'ms-3 align-middle' do
            %i.bi-person-circle.fs-2
          = render 'polkadot_connect_button'
    = yield
    = render 'polkadot_account_list'
